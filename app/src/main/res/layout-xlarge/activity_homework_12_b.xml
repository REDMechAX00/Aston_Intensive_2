<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.chapter12b.HomeworkActivity12B">

    <Button
        android:id="@+id/homework_12_b_button_toast"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/chapter_12_margin_normal"
        android:text="@string/chapter_12_button_label_toast"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/homework_12_b_button_zero"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/homework_12_b_show_count" />

    <Button
        android:id="@+id/homework_12_b_button_zero"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/chapter_12_margin_normal"
        android:backgroundTint="@color/gray"
        android:text="@string/chapter_12_button_label_zero"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/homework_12_b_button_count"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/homework_12_b_button_toast" />

    <Button
        android:id="@+id/homework_12_b_button_count"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/chapter_12_margin_normal"
        android:layout_marginEnd="@dimen/chapter_12_margin_normal"
        android:backgroundTint="@color/purple_700"
        android:text="@string/chapter_12_button_label_count"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@+id/homework_12_b_show_count"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/homework_12_b_button_zero" />

    <TextView
        android:id="@+id/homework_12_b_show_count"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/chapter_12_margin_normal"
        android:layout_marginTop="@dimen/chapter_12_margin_normal"
        android:layout_marginEnd="@dimen/chapter_12_margin_normal"
        android:layout_marginBottom="@dimen/chapter_12_margin_normal"
        android:background="@color/color_yellow"
        android:gravity="center"
        android:text="@string/chapter_12_count_initial_value"
        android:textColor="@color/color_primary"
        android:textSize="@dimen/chapter_12_text_size_large"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/homework_12_b_button_toast"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>