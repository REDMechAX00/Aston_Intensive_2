<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.ChapterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/app_margin_normal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/chapter_text_title"
            style="@style/themeLabelNormal" />

        <Button
            android:id="@+id/chapter_btn_homework"
            style="@style/themeButtonNormal"
            android:text="@string/title_homework" />

        <Button
            android:id="@+id/chapter_btn_challenge"
            style="@style/themeButtonNormal"
            android:text="@string/title_challenge" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>